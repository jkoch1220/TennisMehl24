# TennisMehl Portal Environment Variables

# ============================================
# BACKEND CONFIGURATION (NEW)
# ============================================

# Enable backend mode (set to 'true' to use backend)
VITE_USE_BACKEND=false

# Backend URL (your EC2 instance)
VITE_BACKEND_URL=http://localhost:3000
# VITE_BACKEND_URL=https://api.tennismehl.de

# Request timeout in ms
VITE_BACKEND_TIMEOUT=30000

# Feature flags (override defaults)
# Set to 'false' to disable specific backend features
# VITE_BACKEND_CLAUDE=true
# VITE_BACKEND_DIESEL=true
# VITE_BACKEND_GEOCODING=true
# VITE_BACKEND_PDF=false
# VITE_BACKEND_CALC=false
# VITE_BACKEND_ROUTE=false
# VITE_BACKEND_APPWRITE=false

# ============================================
# LEGACY DIRECT API ACCESS
# (Only needed when VITE_USE_BACKEND=false)
# ============================================

# Appwrite Configuration
VITE_APPWRITE_ENDPOINT=https://cloud.appwrite.io/v1
VITE_APPWRITE_PROJECT_ID=your-project-id
VITE_APPWRITE_API_KEY=your-api-key

# Claude AI (SECURITY WARNING: Exposed in browser!)
# Remove this when using backend mode
VITE_ANTHROPIC_API_KEY=sk-ant-api03-xxx

# TankerKönig Diesel API (SECURITY WARNING: Exposed in browser!)
# Remove this when using backend mode
VITE_TANKERKOENIG_API_KEY=xxx

# Fallback diesel price (€/L)
VITE_DIESEL_DURCHSCHNITTSPREIS=1.45

# ============================================
# APPLICATION SETTINGS
# ============================================

# App Environment
VITE_APP_ENV=development

# Debug mode
VITE_DEBUG=false
