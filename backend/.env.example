# Server
NODE_ENV=production
PORT=3001

# CORS (kommaseparierte Liste)
CORS_ORIGINS=http://localhost:5173,https://tennismehl24.netlify.app,https://deine-domain.de

# ============================================================================
# APPWRITE
# ============================================================================
APPWRITE_ENDPOINT=https://cloud.appwrite.io/v1
APPWRITE_PROJECT_ID=dein-projekt-id
APPWRITE_API_KEY=dein-api-key
APPWRITE_DATABASE_ID=main

# ============================================================================
# API KEYS
# ============================================================================

# Anthropic Claude AI
ANTHROPIC_API_KEY=sk-ant-api...

# Google Maps (optional, aber empfohlen f端r besseres Routing)
GOOGLE_MAPS_API_KEY=AIzaSy...

# OpenRouteService (Fallback f端r Routing)
OPENROUTESERVICE_API_KEY=5b3ce...

# TankerKoenig (Dieselpreise)
TANKERKOENIG_API_KEY=xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx

# ============================================================================
# EMAIL (IMAP/SMTP)
# ============================================================================
EMAIL_HOST=imap.ionos.de
EMAIL_PORT=993
EMAIL_USER=anfrage@tennismehl.com
EMAIL_PASSWORD=dein-passwort

SMTP_HOST=smtp.ionos.de
SMTP_PORT=587

# ============================================================================
# CRON JOBS
# ============================================================================
ENABLE_CRON_JOBS=true

# Secret f端r externe Cron-Aufrufe (z.B. von cron-job.org)
CRON_SECRET=ein-sicheres-geheimes-token

# ============================================================================
# LOGGING
# ============================================================================
LOG_LEVEL=info

# ============================================================================
# RATE LIMITING
# ============================================================================
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
